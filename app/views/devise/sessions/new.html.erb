<div class="login-page">
  <h2 class="title">Login Form</h2>
  <div class="form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "username" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input", placeholder: "email" %>
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <% end %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot password?", new_password_path(resource_name), class: "forgot-btn" %><br />
      <% end %>
      <%= f.submit "Log in", class: "btn" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
