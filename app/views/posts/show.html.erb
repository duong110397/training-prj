<div class="card">
  <div class="card-image">
    <%= image_tag @post.image if @post.image.attached? %>
  </div>
  <div class="card-bottom"></div>
  <div class="card-meta">
    <div class="card-top">
      <div class="user">
        <div class="avatar">
          <img src="/assets/avatar1.png" alt="" />
        </div>
        <span class="username"><%= @post.user ? @post.user.name : "Anonymous" %></span>
      </div>
      <span class="date"><%= time_ago_in_words(@post.created_at) %></span>
    </div>
    <h2 class="card-title"><a href="#"><%= @post.title %></a></h2>
    <p class="card-title"><%= @post.content %></p>
  </div>
</div>
