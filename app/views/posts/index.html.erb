<% if user_signed_in? %> 
  <%= link_to "Create Blog", new_post_path, :class => "btn btn-primary" %>
<% else %>
  <%= link_to "Create Blog With As Guest", new_post_path, :class => "btn btn-primary" %>
<% end %>
<div class="box-cards-blog -grid">
  <% @posts.each do |post| %>
    <%= render post %>
  <% end %>
</div>
