<div class="container">
  <% @posts.each do |post| %>
    <div class="card">
      <div class="card__header">
        <%= image_tag post.image if post.image.attached? %>
      </div>
      <div class="card__body">
        <span class="tag tag-blue"><%= post.status %></span>
        <h4><%= link_to "#{post.title}", post  %></h4>
      </div>
      <div class="card__footer">
        <div class="user">
          <img src="https://i.pravatar.cc/40?img=2" alt="user__image" class="user__image">
          <div class="user__info">
            <h5><%= post.user ? post.user.name : "Anonymous" %></h5>
            <small><%= time_ago_in_words(post.created_at) %> ago</small>
          </div>
        </div>
      </div>
      <div class="btn-guest">
        <%= link_to 'approve', confirm_post_guest_posts_path(:id => post.id, :commit_status => "approve"), :method => :patch, :class => "btn btn-success" %> 
        <%= link_to 'reject', confirm_post_guest_posts_path(:id => post.id, :commit_status => "reject"), :method => :patch, :class => "btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>
